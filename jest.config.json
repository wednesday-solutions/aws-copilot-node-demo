{
  "testEnvironment": "node",
  "reporters": [
    "default",
    [
      "jest-sonar",
      {
        "outputDirectory": "reports",
        "outputName": "test-report.xml",
        "relativeRootDir": "./",
        "reportedFilePath": "relative"
      }
    ]
  ],
  "collectCoverageFrom": ["**/*.js", "!**/coverage/**", "!**/node_modules/**", "!**/*.test.js"],
  "coverageReporters": ["json-summary", "text", "lcov"],
  "coverageThreshold": {
    "global": {
      "statements": 100,
      "branches": 100,
      "functions": 100,
      "lines": 100
    }
  }
}
